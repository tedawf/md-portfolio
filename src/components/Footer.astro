---
import Icon from "astro-icon";
import Card from "./Card.astro";
import SocialMedia from "./SocialMedia.astro";

const { showBorder = true } = Astro.props;
---

<footer class={showBorder ? "border-t-2 border-black dark:border-white" : ""}>
  <div class="flex flex-col items-center">
    <div class="flex w-full max-w-lg justify-evenly py-5 lg:hidden">
      <SocialMedia />
    </div>
    <Card classes="py-2 px-3 mb-5 lg:mt-8" href="/rss.xml" target="_blank">
      <span class="pr-1">Subscribe to RSS</span>
      <Icon name="tabler:rss" width={20} height={20} />
    </Card>
    <small class="mb-4 text-center text-base">
      <span>Copyright &copy;</span>
      <span id="copyright"></span>

      <span>Ang Wei Feng (Ted) | All rights reserved.</span>
    </small>
  </div>
</footer>

<script>
  document.querySelector("#copyright")!.textContent = new Date()
    .getFullYear()
    .toString();
</script>
