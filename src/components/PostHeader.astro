---
import { slugify } from "../utils/slugify";
import { formatDate } from "../utils/formatDate";
import { Image } from "@astrojs/image/components";

const { title, date, category, author, image } = Astro.props;
---

<header>
  <div class="container">
    <small>
      {
        category.map((item: string) => (
          <a href={`/category/${slugify(item)}/`} class="badge">
            {item}
          </a>
        ))
      }
    </small>
    <h2 class="h2">{title}</h2>
    <p>
      by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={600}
    format="webp"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
  />
</header>
