---
import { CollectionEntry, getCollection } from "astro:content";
import CategoryCard from "../../components/CategoryCard.astro";
import CategoryCloud from "../../components/CategoryCloud.astro";
import SocialMedia from "../../components/SocialMedia.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import filterProjects from "../../utils/filterProjects";
import slugify from "../../utils/slugify";

export async function getStaticPaths() {
  const allProjects = await getCollection("projects");
  const filteredProjects: CollectionEntry<"projects">[] =
    filterProjects(allProjects);

  const allCategories = [
    ...new Set(
      filteredProjects
        .map((project) => {
          return project.data.category;
        })
        .flat()
    ),
  ];

  return allCategories.map((cat) => {
    return {
      params: { category: slugify(cat) },
      props: { name: cat },
    };
  });
}

const { category } = Astro.params;
const { name } = Astro.props;

const allProjects = await getCollection("projects");
const filteredProjects: CollectionEntry<"projects">[] =
  filterProjects(allProjects);
const categorisedProjects = filteredProjects.filter((project: any) =>
  project.data.category.some((cat: string) => slugify(cat) == category)
);
---

<BaseLayout title={name}>
  <section class="min-h-footer flex flex-col items-center justify-center">
    <h1 class="py-10 text-center text-5xl font-bold">
      Projects using
      <a class="underline underline-offset-8">{name}</a>
    </h1>
    <div class="mb-10 grid max-w-7xl grid-cols-1 lg:grid-cols-2 lg:px-16">
      {
        categorisedProjects.map((project: any) => (
          <CategoryCard
            data={project.data}
            url={project.slug}
            classes="max-h-[100px]"
          />
        ))
      }{
        categorisedProjects.map((project: any) => (
          <CategoryCard
            data={project.data}
            url={project.slug}
            classes="max-h-[100px]"
          />
        ))
      }{
        categorisedProjects.map((project: any) => (
          <CategoryCard
            data={project.data}
            url={project.slug}
            classes="max-h-[100px]"
          />
        ))
      }
    </div>
    <div
      class="flex w-full flex-col items-center justify-center border-t-2 border-black py-10"
    >
      <h2 class="mb-10 max-w-4xl text-center text-4xl">
        My other skills you might be interested in
      </h2>
      <CategoryCloud filter={category} />
    </div>
  </section>
  <div class="fixed right-3 top-2/3 hidden flex-col gap-5 lg:flex">
    <SocialMedia />
  </div>
</BaseLayout>
